# Export computers with commonly used properties (organized)

Get-ADComputer -Filter * -Properties * | 
    Select-Object `
        # Basic Info
        Name,
        DNSHostName,
        Description,
        
        # Operating System
        OperatingSystem,
        OperatingSystemVersion,
        OperatingSystemServicePack,
        
        # Network
        IPv4Address,
        IPv6Address,
        
        # Status
        Enabled,
        
        # Location
        Location,
        CanonicalName,
        DistinguishedName,
        
        # Dates
        LastLogonDate,
        PasswordLastSet,
        whenCreated,
        whenChanged,
        
        # Security
        LockedOut,
        PasswordExpired,
        PasswordNeverExpires,
        TrustedForDelegation,
        
        # Additional
        ManagedBy,
        ServicePrincipalNames,
        ObjectGUID,
        SID |
    Export-Csv -Path "C:\Temp\AD_Computers_Organized.csv" -NoTypeInformation

Write-Host "Done! Exported to C:\Temp\AD_Computers_Organized.csv" -ForegroundColor Green
