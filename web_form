    <script>
        // Auto-populate display name when first/last name change
        document.getElementById('firstName').addEventListener('input', updateDisplayName);
        document.getElementById('lastName').addEventListener('input', updateDisplayName);

        function updateDisplayName() {
            const firstName = document.getElementById('firstName').value;
            const lastName = document.getElementById('lastName').value;
            const displayName = document.getElementById('displayName');
            
            if (firstName || lastName) {
                displayName.value = `${firstName} ${lastName}`.trim();
            }
        }

        // Auto-populate username from email
        document.getElementById('emailAddress').addEventListener('input', function() {
            const email = this.value;
            const samAccountName = document.getElementById('samAccountName');
            const upn = document.getElementById('userPrincipalName');
            
            if (email && email.includes('@')) {
                const username = email.split('@')[0];
                if (!samAccountName.value) {
                    samAccountName.value = username;
                }
                if (!upn.value) {
                    upn.value = email;
                }
            }
        });

        // Cancel button - clear all fields
        document.getElementById('cancelBtn').addEventListener('click', function() {
            if (confirm('Are you sure you want to clear all fields?')) {
                document.getElementById('adUserForm').reset();
                document.getElementById('enabled').checked = true; // Reset to default checked
                hideMessages();
            }
        });

        // Form submission
        document.getElementById('adUserForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            hideMessages();
            
            // Validate required fields
            const firstName = document.getElementById('firstName').value.trim();
            const lastName = document.getElementById('lastName').value.trim();
            const emailAddress = document.getElementById('emailAddress').value.trim();
            
            if (!firstName || !lastName || !emailAddress) {
                showError();
                return;
            }
            
            // Collect all form data
            const userData = {
                timestamp: new Date().toISOString(),
                basicInformation: {
                    firstName: firstName,
                    lastName: lastName,
                    displayName: document.getElementById('displayName').value.trim(),
                    initials: document.getElementById('initials').value.trim(),
                    description: document.getElementById('description').value.trim()
                },
                accountInformation: {
                    samAccountName: document.getElementById('samAccountName').value.trim(),
                    userPrincipalName: document.getElementById('userPrincipalName').value.trim(),
                    password: document.getElementById('password').value, // In production, never store passwords in JSON!
                    accountExpirationDate: document.getElementById('accountExpirationDate').value,
                    enabled: document.getElementById('enabled').checked,
                    passwordNeverExpires: document.getElementById('passwordNeverExpires').checked,
                    cannotChangePassword: document.getElementById('cannotChangePassword').checked,
                    changePasswordAtLogon: document.getElementById('changePasswordAtLogon').checked
                },
                contactInformation: {
                    emailAddress: emailAddress,
                    officePhone: document.getElementById('officePhone').value.trim(),
                    mobilePhone: document.getElementById('mobilePhone').value.trim(),
                    homePhone: document.getElementById('homePhone').value.trim(),
                    fax: document.getElementById('fax').value.trim(),
                    webPage: document.getElementById('webPage').value.trim()
                },
                organization: {
                    title: document.getElementById('title').value.trim(),
                    department: document.getElementById('department').value.trim(),
                    company: document.getElementById('company').value.trim(),
                    manager: document.getElementById('manager').value.trim(),
                    employeeID: document.getElementById('employeeID').value.trim(),
                    employeeNumber: document.getElementById('employeeNumber').value.trim()
                },
                address: {
                    streetAddress: document.getElementById('streetAddress').value.trim(),
                    city: document.getElementById('city').value.trim(),
                    state: document.getElementById('state').value.trim(),
                    postalCode: document.getElementById('postalCode').value.trim(),
                    country: document.getElementById('country').value.trim(),
                    office: document.getElementById('office').value.trim()
                },
                profileSettings: {
                    profilePath: document.getElementById('profilePath').value.trim(),
                    scriptPath: document.getElementById('scriptPath').value.trim(),
                    homeDirectory: document.getElementById('homeDirectory').value.trim(),
                    homeDrive: document.getElementById('homeDrive').value
                },
                activeDirectorySettings: {
                    organizationalUnit: document.getElementById('organizationalUnit').value.trim(),
                    memberOf: document.getElementById('memberOf').value.trim().split(',').map(g => g.trim()).filter(g => g)
                }
            };
            
            // Convert to JSON
            const jsonData = JSON.stringify(userData, null, 2);
            
            // Create and download the JSON file
            const blob = new Blob([jsonData], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'userad.json';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            // Show success message
            showSuccess();
            
            // Optionally scroll to top to see success message
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        function showSuccess() {
            const successMsg = document.getElementById('successMessage');
            successMsg.style.display = 'block';
            setTimeout(() => {
                successMsg.style.display = 'none';
            }, 5000);
        }

        function showError() {
            const errorMsg = document.getElementById('errorMessage');
            errorMsg.style.display = 'block';
            setTimeout(() => {
                errorMsg.style.display = 'none';
            }, 5000);
        }

        function hideMessages() {
            document.getElementById('successMessage').style.display = 'none';
            document.getElementById('errorMessage').style.display = 'none';
        }
    </script>
</body>
</html>
